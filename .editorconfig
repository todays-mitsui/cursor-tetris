# EditorConfig is awesome: https://EditorConfig.org

# 最上位の設定
root = true

# すべてのファイルに適用
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScriptファイルの設定
[*.{ts,tsx}]
indent_style = space
indent_size = 2

# JSONファイルの設定
[*.json]
indent_style = space
indent_size = 2

# Markdownファイルの設定
[*.md]
trim_trailing_whitespace = false 